extends ./base-frame-layout.jade

block title
  title 主页mian
block style
  link(rel='stylesheet', href='../css/iuapmobile.um.listview.css')
  link(rel='stylesheet', href='../css/main.css')
block body
  .um-frame#main
    #content.um-content
      .p15.um-listview-adaptation   
        .um-listview-wrap#listview
          ul.um-list.um-no-active(data-bind="foreach:data") 
            li.um-listview-row
              a(href='#', class='um-list-item um-swipe-action um-no-icon') 
                .um-swipe-btns
                  span.um-swipe-btn.um-delete 删除
                .um-list-item-media.msg-info
                  img(alt="" data-bind="attr:{'src': img}" width=50)
                  span.um-badge(data-bind="text:msgNum,visible:msgNum>0")
                .um-list-item-inner
                  .um-list-item-body
                    h4(class="um-media-heading fb f16 um-text-overflow" data-bind="text:sender")
                    p(class="um-gray f14 um-text-overflow" data-bind="text:lastMsg")
                  .pr10
                    span(class="um-gray f12" data-bind="text:lastTime")
block script
  script(src='../js/knockout.js')
  script(src='../js/Frameworks/iuapmobile.frameworks.listview.js')
  script(src='../js/main.js')
